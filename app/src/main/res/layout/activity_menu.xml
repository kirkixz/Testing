<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Activity"
    android:background="@drawable/background_main">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_avatar"
        android:layout_width="388dp"
        android:layout_height="311dp"
        android:layout_marginTop="9dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar_e" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_trenning"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/back_button_reg_log"
        android:text="Подготовка"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cardView_avatar"
        app:layout_constraintStart_toStartOf="@+id/cardView_avatar"
        app:layout_constraintTop_toBottomOf="@+id/cardView_avatar" />

    <Button
        android:id="@+id/button_translategame"
        android:layout_width="170dp"
        android:layout_height="271dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/back_button_reg_log"
        android:paddingTop="180dp"
        android:text="Перевод"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/button_trenning"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning" />

    <Button
        android:id="@+id/button_truegame"
        android:layout_width="170dp"
        android:layout_height="271dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/back_button_reg_log"
        android:paddingTop="180dp"
        android:text="Правда?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/button_trenning"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning" />

    <Button
        android:id="@+id/button_top100"
        android:layout_width="145.29dp"
        android:layout_height="36dp"
        android:layout_marginTop="324dp"
        android:text="ТОП"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@drawable/back_top100_button"
        app:layout_constraintEnd_toStartOf="@+id/button_truegame"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/button_translategame"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning" />


</androidx.constraintlayout.widget.ConstraintLayout>