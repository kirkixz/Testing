<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Menu_Activity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_avatar"
        android:layout_width="388dp"
        android:layout_height="311dp"
        android:layout_marginTop="9dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar_e" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_Button_translate"
        android:layout_width="168dp"
        android:layout_height="275dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/back_button_reg_log"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/button_trenning"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--            <Button-->
            <!--                android:id="@+id/button_translategame"-->
            <!--                android:layout_width="169dp"-->
            <!--                android:layout_height="274dp"-->
            <!--                android:background="@drawable/back_button_reg_log"-->
            <!--                android:paddingTop="180dp"-->
            <!--                android:text="Перевод"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:textSize="20sp"-->
            <!--                android:visibility="gone"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintHorizontal_bias="0.0"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_button_reg_log" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="126dp"
                android:layout_height="54dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_translate" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Перевод"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_trenning"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/back_button_reg_log"
        android:text="Подготовка"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cardView_avatar"
        app:layout_constraintStart_toStartOf="@+id/cardView_avatar"
        app:layout_constraintTop_toBottomOf="@+id/cardView_avatar" />


    <Button
        android:id="@+id/button_truegame"
        android:layout_width="170dp"
        android:layout_height="271dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/back_button_reg_log"
        android:paddingTop="180dp"
        android:text="Правда?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/button_trenning"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning" />

    <Button
        android:id="@+id/button_top100"
        android:layout_width="145.29dp"
        android:layout_height="36dp"
        android:layout_marginTop="344dp"
        android:background="@drawable/back_top100_button"
        android:text="ТОП"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/button_truegame"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/CardView_Button_translate"
        app:layout_constraintTop_toBottomOf="@+id/button_trenning" />

</androidx.constraintlayout.widget.ConstraintLayout>